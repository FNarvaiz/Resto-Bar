{% extends "FrontEndBundle::layout.html.twig"  %}
{% block js %}{% endblock %}
{% block contenido %}
    {%for message in app.session.flashbag().get('status')%}
        <div class="alerta"> {{message}}</div>
    {%endfor%}
    {%set primero=true%}
    {%for cajadiaria in cajasdiarias %}
        <article class="cAbm">
				<section class="cContenedorSecundario">
					<h1 class="cLabel titulo cRecuadro verde">Fecha: {{cajadiaria.fecha|date("Y/m/d")}}</h1><br><br>		
					<h1 class="cLabel">
                         Monto: <i>{{cajadiaria.monto}} </i><br>Clima: <i>{{cajadiaria.idclima.nombre}}</i> 					
                        {% if cajadiaria.evento %}
                        <br>Con evento
                        {%endif %}</h1>
                        <section class="cContenedorSecundario">                
                        <a href="{{path("cajasdiarias_ver",{"id":cajadiaria.id})}}"><input class="btn001 azul button sombra-g"  type="button" id="modificar" value="Ver"></a>
                        {%if primero%}
                        {%set primero =false%}
                        <a href="{{path("cajasdiarias_modificar",{"id":cajadiaria.id})}}"><input class="btn001 naranja button sombra-g"  type="button" id="modificar" value="Modificar"></a>
                        </section>
                        {% endif %}
				</section>

		</article>
        <hr/>
    {%endfor%}
{% endblock%}{# empty Twig template #}
{% block botones %}
     <a href="{{path("cajasdiarias_agregar")}}"><button class="btn002 button agregar naranja sombra-g" type="button" id="cerrarMesa">Agregar</button><a>
			{% endblock %}