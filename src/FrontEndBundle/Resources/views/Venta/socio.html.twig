{% extends "FrontEndBundle::layout.html.twig"  %}

{% block js %}
    <script src="{{ asset('js/jquery.min.js') }}"/></script>
    <script>
    
     function Seleccion(elemento)
    {
        var val = elemento.value;
       $("#nroSocio").val(val);
    }
    function Buscar(){
        $("#nombre").val( $("#nroSocio").val());
        
    }
    
    </script>
{% endblock %}
{% block contenido %}
    <article class="cAbm">
    <h2>Ingrese numero de socio</h2>
    <form name="socio" ac action="{{path("ventas_agregar_socio",{"nroventa":nroventa})}}" method="get">
        <div>
    <input type="number" onchange="Buscar()" id="nroSocio"  name="nrosocio" required="required" class="cTextbox">
        </div>
        <div>
    <select  id="nombre"  name="nombre" onchange="Seleccion(this)" class="cTextbox">
        {%for socio in socios %}
            <option value="{{socio.nro}}">{{socio.nombre}}</option>
        {%endfor%}
    </select>
    </div>
    <input type="submit" id="btn"  value="Aceptar" class="btn001 azul button sombra-g">
        
    </form>
    
    </article>
    
{% endblock%}{# empty Twig template #}

{% block botones %}
     <a class="btn002 button agregar naranja sombra-g" href="{{path("ventas_mostrar",{"id":nroventa})}}">Volver a la venta<a>
         {% endblock %}